<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="@dimen/relevant_box_shadow_size"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:background="@drawable/background_dialog">

    <LinearLayout
        android:layout_below="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.peppermint.app.ui.base.views.CustomFontButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:textFont="@string/font_regular"
            android:text="Button 1"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="@color/color_grey_to_white_pressed"
            android:background="@drawable/background_dialog_btn_left"
            style="?android:attr/borderlessButtonStyle" />

        <com.peppermint.app.ui.base.views.CustomFontButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 2"
            custom:textFont="@string/font_regular"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="@color/color_grey_to_white_pressed"
            android:background="@drawable/background_dialog_btn_center"
            style="?android:attr/borderlessButtonStyle" />

        <com.peppermint.app.ui.base.views.CustomFontButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 3"
            custom:textFont="@string/font_regular"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="@color/color_grey_to_white_pressed"
            android:background="@drawable/background_dialog_btn_right"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <com.peppermint.app.ui.base.views.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:gravity="center"
        custom:textFont="@string/font_semibold"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:text="Empty Title"/>

    <FrameLayout android:id="@+id/container"
        android:layout_below="@id/title"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</RelativeLayout>