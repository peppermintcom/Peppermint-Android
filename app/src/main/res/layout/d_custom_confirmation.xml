<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <com.peppermint.app.ui.views.simple.CustomFontTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center_vertical"
        android:singleLine="false"
        custom:textFont="@string/font_regular"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Empty Text"/>

    <com.peppermint.app.ui.views.simple.CustomFontButton
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center_vertical"
        android:text="Empty Text"
        android:textAllCaps="false"
        custom:textFont="@string/font_regular"
        android:textSize="14dp"
        android:textColor="@color/grey_text"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_checkbox"
        android:drawableTint="@color/grey_text"
        android:background="@android:color/transparent"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>