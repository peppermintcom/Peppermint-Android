<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    tools:context="com.peppermint.app.ui.tutorial.SplashActivity">

    <com.peppermint.app.ui.views.PeppermintRecordView
        android:id="@+id/imgLogo"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginBottom="30dp"
        custom:progressEmptyColor="@android:color/transparent"
        custom:progressFillColor="@android:color/transparent"
        custom:progressThickness="1dp"
        custom:cornerRadius="40dp"
        custom:seconds="25"
        style="?attr/recordProgressStyle" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_text"
        android:textSize="32dp"
        android:text="@string/peppermint_com"/>

</LinearLayout>
