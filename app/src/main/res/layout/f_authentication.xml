<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lytTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <com.peppermint.app.ui.views.simple.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                custom:textFont="@string/font_semibold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="@string/your_name_" />

            <com.peppermint.app.ui.views.simple.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                custom:textFont="@string/font_semibold"
                android:textColor="@color/grey_text"
                android:textSize="14dp"
                android:text="@string/pref_summary_displayname" />

            <com.peppermint.app.ui.views.simple.CustomValidatedEditText
                android:id="@+id/txtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:hint="@string/first_name"
                android:textColorHint="@color/black_50percent"
                android:maxLength="40"
                android:inputType="textCapWords"
                custom:textFont="@string/font_regular"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/ic_cursor"
                style="@style/Peppermint.CustomEditTextSimple"/>

            <com.peppermint.app.ui.views.simple.CustomValidatedEditText
                android:id="@+id/txtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:paddingTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:hint="@string/last_name"
                android:textColorHint="@color/black_50percent"
                android:maxLength="40"
                android:inputType="textCapWords"
                custom:textFont="@string/font_regular"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/ic_cursor"
                style="@style/Peppermint.CustomEditTextSimple"/>

            <com.peppermint.app.ui.views.simple.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                custom:textFont="@string/font_semibold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="@string/pick_account" />

            <com.peppermint.app.ui.views.simple.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                custom:textFont="@string/font_semibold"
                android:textColor="@color/grey_text"
                android:textSize="14dp"
                android:text="@string/this_account_will_be_used" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.peppermint.app.ui.views.simple.CustomNoScrollListView
                android:id="@id/android:list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@id/android:empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <com.peppermint.app.ui.views.simple.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    custom:textFont="@string/font_semibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="@string/no_google_accounts_found" />

                <com.peppermint.app.ui.views.simple.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    custom:textFont="@string/font_semibold"
                    android:textColor="@color/grey_text"
                    android:textSize="16dp"
                    android:text="@string/add_account_to_start"/>

            </LinearLayout>

        </FrameLayout>

        <com.peppermint.app.ui.views.simple.CustomFontButton
            android:id="@+id/btnAddAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            custom:textFont="@string/font_regular"
            android:textSize="16dp"
            android:text="@string/link_another_gmail"
            android:textAllCaps="false"
            android:textColor="@color/color_green_to_white_pressed"
            android:background="@drawable/background_white_to_solid_border_top_and_bottom_pressed"
            style="?android:attr/borderlessButtonStyle" />

        <com.peppermint.app.ui.views.simple.CustomFontButton
            android:id="@+id/btnNext"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingBottom="8dp"
            custom:textFont="@string/font_semibold"
            android:textSize="18dp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/color_white_to_grey_disabled"
            android:background="@drawable/background_btn_alt"
            android:enabled="false"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</ScrollView>