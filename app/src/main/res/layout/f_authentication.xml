<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lytTop"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.peppermint.app.ui.views.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            custom:textFont="@string/font_semibold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="@string/pick_account" />

        <com.peppermint.app.ui.views.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            custom:textFont="@string/font_regular"
            android:textColor="@color/grey_text"
            android:textSize="16dp"
            android:text="@string/this_account_will_be_used" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddAccount"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:textSize="18dp"
        android:text="@string/add_account"
        android:textAllCaps="false"
        android:textColor="@color/color_green_to_white_pressed"
        android:background="@drawable/background_btn"
        style="?android:attr/borderlessButtonStyle"
         />

    <ScrollView
        android:layout_below="@id/lytTop"
        android:layout_above="@id/btnAddAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@id/android:list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@id/android:empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <com.peppermint.app.ui.views.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    custom:textFont="@string/font_regular"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:text="@string/no_google_accounts_found" />

                <com.peppermint.app.ui.views.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    custom:textFont="@string/font_semibold"
                    android:textColor="@color/grey_text"
                    android:textSize="18dp"
                    android:text="@string/add_account_to_start"/>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</RelativeLayout>