<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.peppermint.app.ui.base.views.CustomActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/smoothProgress"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/actionBar"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:indeterminate="true"
        android:interpolator="@anim/pocket_interpolator"
        custom:spb_interpolator="spb_interpolator_acceleratedecelerate"
        custom:spb_background="@null"
        custom:spb_generate_background_with_colors="false"
        custom:spb_sections_count="2"
        custom:spb_colors="@array/smooth_progress_colors"
        custom:spb_speed="2.0"
        custom:spb_stroke_width="6dp"
        custom:spb_stroke_separator_length="0dp"
        custom:spb_reversed="false"
        custom:spb_mirror_mode="false" />

    <com.peppermint.app.ui.base.views.FullDrawerLayout
        android:id="@+id/drawer"
        android:layout_below="@id/smoothProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.peppermint.app.ui.base.views.FitsSystemWindowsFrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/smoothProgress" />

        <!-- The navigation drawer -->
        <LinearLayout
            android:id="@+id/drawerPane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="56dp"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:clickable="true">

            <!-- Profile Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_green_text"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.peppermint.app.ui.base.views.RoundImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    custom:cornerRadius="10dp"
                    custom:roundBorderWidth="2dp"
                    custom:roundBorderColor="@color/white"
                />

                <com.peppermint.app.ui.base.views.CustomFontTextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    custom:textFont="@string/font_semibold"
                    android:singleLine="true"/>
            </LinearLayout>

            <!-- List of Actions (pages) -->
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:background="@color/background0"
                android:listSelector="@drawable/background_transparent_to_solid_pressed_sel"/>

        </LinearLayout>

    </com.peppermint.app.ui.base.views.FullDrawerLayout>

    <FrameLayout
        android:id="@+id/touchInterceptor"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lytOverlay"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
