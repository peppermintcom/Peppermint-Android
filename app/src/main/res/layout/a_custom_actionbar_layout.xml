<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.peppermint.app.ui.base.views.CustomActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/smoothProgress"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/actionBar"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:indeterminate="true"
        android:interpolator="@anim/pocket_interpolator"
        custom:spb_interpolator="spb_interpolator_acceleratedecelerate"
        custom:spb_background="@null"
        custom:spb_generate_background_with_colors="false"
        custom:spb_sections_count="2"
        custom:spb_colors="@array/smooth_progress_colors"
        custom:spb_speed="2.0"
        custom:spb_stroke_width="6dp"
        custom:spb_stroke_separator_length="0dp"
        custom:spb_reversed="false"
        custom:spb_mirror_mode="false" />

    <com.peppermint.app.ui.base.views.FitsSystemWindowsFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/smoothProgress" />

    <FrameLayout
        android:id="@+id/touchInterceptor"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lytOverlay"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>
