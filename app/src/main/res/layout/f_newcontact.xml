<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <com.peppermint.app.ui.base.views.EditTextValidatorLayout
            android:id="@+id/lytNameValidator"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.peppermint.app.ui.base.views.RoundImageView
                    android:id="@+id/imgAddAvatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <com.peppermint.app.ui.base.views.CustomFontEditText
                            android:id="@+id/txtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            custom:textFont="@string/font_regular"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:hint="@string/first_name"
                            android:textColorHint="@color/black_50percent"
                            android:maxLength="100"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/ic_cursor"
                            android:background="@drawable/background_border_bottom"/>

                        <com.peppermint.app.ui.base.views.CustomFontEditText
                            android:id="@+id/txtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            custom:textFont="@string/font_regular"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:hint="@string/last_name"
                            android:textColorHint="@color/black_50percent"
                            android:maxLength="100"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/ic_cursor"/>

                    </LinearLayout>

            </LinearLayout>

        </com.peppermint.app.ui.base.views.EditTextValidatorLayout>

        <com.peppermint.app.ui.base.views.EditTextValidatorLayout
            android:id="@+id/lytEmailValidator"
            android:background="@drawable/background_border_bottom"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.peppermint.app.ui.base.views.CustomFontEditText
                android:id="@+id/txtEmail"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:textFont="@string/font_regular"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black_50percent"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/background_input_email"
                android:maxLength="250"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/ic_cursor"/>

        </com.peppermint.app.ui.base.views.EditTextValidatorLayout>

        <com.peppermint.app.ui.base.views.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/you_can_add_phone_contact_or_email"
            android:textSize="16dp"
            android:textColor="@color/dark_grey_text"
            custom:textFont="@string/font_semibold"
            />

    </LinearLayout>
</ScrollView>