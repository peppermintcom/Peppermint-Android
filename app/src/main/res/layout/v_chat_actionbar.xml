<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <com.peppermint.app.ui.views.RoundImageView
        android:id="@+id/imgChatAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_anonymous_green_48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.peppermint.app.ui.views.simple.CustomFontTextView
            android:id="@+id/txtChatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            custom:textFont="@string/font_semibold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="@string/app_name">
        </com.peppermint.app.ui.views.simple.CustomFontTextView>

        <com.peppermint.app.ui.views.simple.CustomFontTextView
            android:id="@+id/txtChatVia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            custom:textFont="@string/font_semibold"
            android:textSize="20dp"
            android:textColor="@color/dark_green_text"
            android:text="123456879">
        </com.peppermint.app.ui.views.simple.CustomFontTextView>

    </LinearLayout>

</LinearLayout>

