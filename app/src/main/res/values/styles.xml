<resources>

    <style name="Peppermint.Theme.Fullscreen.Tutorial" parent="Peppermint.Theme.Fullscreen">
        <item name="recordProgressStyle">@style/Peppermint.RecordProgress.Tutorial</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="tutorialMargin">30dp</item>
    </style>

    <style name="Peppermint.Theme.Fullscreen" parent="Peppermint.Theme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Peppermint.Theme.NoActionBar" parent="Peppermint.Theme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Peppermint.Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Peppermint.ActionBar</item>
        <item name="android:editTextStyle">@style/Peppermint.EditText</item>
        <item name="android:spinnerStyle">@style/Peppermint.Spinner</item>
        <item name="android:listPopupWindowStyle">@style/Peppermint.ListPopupWindow</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/background0</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
        <item name="android:textColorTertiary">@color/green_text</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="relevantBoxStyle">@style/Peppermint.RelevantBox</item>
        <item name="relevantBoxRadius">10dp</item>
        <item name="relevantBoxShadowSize">3dp</item>

        <item name="normalBoxStyle">@style/Peppermint.NormalBox</item>
        <item name="normalBoxRadius">5dp</item>
        <item name="normalBoxShadowSize">2dp</item>

        <item name="recordProgressStyle">@style/Peppermint.RecordProgress</item>
        <item name="customActionBarStyle">@style/Peppermint.CustomActionBar</item>
    </style>

    <style name="Peppermint"></style>

    <!-- PeppermintRecordView -->
    <style name="Peppermint.RecordProgress.Tutorial" parent="Peppermint.RecordProgress">
        <item name="fillBackground">false</item>
        <item name="progressEmptyColor">@color/record_progress_empty_tutorial</item>
        <item name="progressFillColor">@color/record_progress_fill_tutorial</item>
        <item name="seconds">110</item>
    </style>

    <style name="Peppermint.RecordProgress">
        <item name="fillBackground">true</item>
        <item name="backgroundColor1">@color/background1</item>
        <item name="backgroundColor2">@color/background2</item>
        <item name="progressEmptyColor">@color/record_progress_empty</item>
        <item name="progressFillColor">@color/record_progress_fill</item>
        <item name="cornerRadius">50dp</item>
        <item name="progressThickness">10dp</item>
    </style>

    <!-- Disable ActionBar; Use Custom ActionBar -->
    <style name="Peppermint.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Peppermint.CustomActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/background_actionbar</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">6dp</item>   <!-- for shade -->
    </style>

    <!-- Box Styles -->
    <style name="Peppermint.NormalBox">
        <item name="android:background">@drawable/background_box_normal</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Peppermint.RelevantBox">
        <item name="android:background">@drawable/background_box_relevant</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Peppermint.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Peppermint.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Peppermint.ListPopupWindow">
        <item name="android:popupBackground">@drawable/background_box_popupwindow</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Utility Transparent Theme -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
