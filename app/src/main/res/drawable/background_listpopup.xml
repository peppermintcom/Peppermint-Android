<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/box_shadow" />
            <corners android:bottomLeftRadius="@dimen/relevant_box_radius" android:bottomRightRadius="@dimen/relevant_box_radius" />
        </shape>
    </item>
    <item android:bottom="@dimen/relevant_box_shadow_size">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/relevant_box_radius" android:bottomRightRadius="@dimen/relevant_box_radius" />
        </shape>
    </item>
</layer-list>