<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:duration="1"
            android:toDegrees="360">

            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thicknessRatio="15"
                android:useLevel="false" >

                <size
                    android:height="17dip"
                    android:width="17dip" />

                <gradient
                    android:endColor="#85a09d"
                    android:startColor="#d1dcdb"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>

        </rotate>
    </item>

    <item android:drawable="@drawable/ic_play_6dp" android:gravity="center">
    </item>
</layer-list>