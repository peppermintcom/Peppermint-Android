<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="?attr/normalBoxRadius">
        <shape>
            <solid android:color="@color/box_shadow" />
            <corners android:radius="?attr/normalBoxRadius" />
        </shape>
    </item>
    <item android:bottom="?attr/normalBoxRadius">
        <shape>
            <solid android:color="@color/box_shadow" />
        </shape>
    </item>
    <item android:top="1dp" android:bottom="?attr/normalBoxRadius">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:bottom="?attr/normalBoxShadowSize" android:top="?attr/normalBoxRadius">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="?attr/normalBoxRadius" />
        </shape>
    </item>
</layer-list>