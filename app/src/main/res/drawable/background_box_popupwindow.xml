<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/normal_box_radius">
        <shape>
            <solid android:color="@color/box_shadow" />
            <corners android:radius="@dimen/normal_box_radius" />
        </shape>
    </item>
    <item android:bottom="@dimen/normal_box_radius">
        <shape>
            <solid android:color="@color/divider_grey" />
        </shape>
    </item>
    <item android:top="1dp" android:bottom="@dimen/normal_box_radius">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:bottom="@dimen/normal_box_shadow_size" android:top="@dimen/normal_box_radius">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/normal_box_radius" />
        </shape>
    </item>
</layer-list>