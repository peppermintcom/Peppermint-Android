<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peppermint.app" >

    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- GET_ACCOUNTS & USE_CREDENTIALS is used to obtain account details and credentials for the Gmail API -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- READ_PHONE_STATE is used to obtain the device unique ID -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".PeppermintApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Peppermint.Theme" >

        <!-- UI: TUTORIAL -->
        <activity
            android:name=".ui.tutorial.TutorialActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Peppermint.Theme.Fullscreen.Tutorial" >
        </activity>

        <!-- UI: AUTHENTICATION -->
        <activity
            android:name=".ui.authentication.AuthActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/Peppermint.Theme.NoActionBar" >
        </activity>

        <!-- UI: NEW RECIPIENT -->
        <activity
            android:name=".ui.recipients.add.NewRecipientActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:theme="@style/Peppermint.Theme.NoActionBar" >
        </activity>

        <!-- UI: MAIN W/ DRAWER -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Peppermint.Theme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="peppermint.com"
                    android:pathPrefix="/reply" />
                <data android:scheme="http"
                    android:host="peppermint.com"
                    android:pathPrefix="/reply" />
                <data android:scheme="peppermint"
                    android:host="reply" android:path="/" />
            </intent-filter>
        </activity>

        <!-- UI: RECORDING -->
        <activity
            android:name=".ui.recording.RecordingActivity"
            android:label="@string/title_activity_record"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Peppermint.Theme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- UI: SETTINGS -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Peppermint.Theme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- UI: HELPER GET RESULT (utilitary invisible activity that allows services to
            launch other activities and obtain a result through "onActivityResult") -->
        <activity
            android:name=".sending.GetResultActivity"
            android:theme="@style/Theme.Transparent" >
        </activity>

        <!-- SERV: RECORDING -->
        <service
            android:name=".RecordService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <!-- SERV: SENDING -->
        <service
            android:name=".SenderService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <!-- SERV: HTTP REST -->
        <service
            android:name=".rest.HttpClientService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e8809814fc7d62266d6e3bb86faecc9e86696f83" />

        <!-- UI: SPLASH (disabled) -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Peppermint.Theme.Fullscreen" >

        </activity>
    </application>

</manifest>
